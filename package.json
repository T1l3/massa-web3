{
  "name": "@massalabs/massa-web3",
  "version": "1.9.5",
  "description": "massa's web3 sdk client",
  "main": "dist/index.js",
  "scripts": {
    "up": "npm update",
    "check": "npm outdated",
    "upgrade": "npm run up && npm run check && npm run build",
    "build-package": "rimraf dist/* && tsc -d",
    "build-bundle": "npm run gen-bundle && npm run uglify-bundle-optimize",
    "build": "npm run build-package && npm run build-bundle",
    "update-version-major": "npm version major",
    "update-version-minor": "npm version minor",
    "update-version-patch": "npm version patch",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha -r ts-node/register test/**/*.spec.ts",
    "test-smart-contract-example": "ts-node ./examples/smartContract.ts",
    "test-vault-example": "ts-node ./examples/vault.ts",
    "fix-lint": "tslint -c tslint.json '**/*.ts' --fix",
    "gen-bundle": "browserify dist/index.js --standalone massa > bundle.js",
    "uglify-bundle": "uglifyjs --compress --mangle -- bundle.js > bundle.min.js",
    "uglify-bundle-optimize": "node minify.js"
  },
  "author": "Massa Labs <info@massa.net>",
  "contributors": [
    "Evgeni Pirianov",
    "Yvan Sraka <yvan@sraka.xyz>"
  ],
  "license": "MIT",
  "repository": "https://github.com/massalabs/massa-web3",
  "private": false,
  "keywords": [
    "web3",
    "js",
    "ts",
    "sdk",
    "massa"
  ],
  "dependencies": {
    "@noble/secp256k1": "git+https://BatiGencho@github.com/noble-secp256k1.git#feature/entropy-32-bytes",
    "axios": "^0.26.1",
    "base58check": "^2.0.0",
    "bip39": "^3.0.4",
    "bn.js": "^5.2.0",
    "buffer": "^6.0.3",
    "create-hash": "^1.2.0",
    "crypto-js": "^4.1.1",
    "massa-sc-utils": "^2.1.0",
    "varint": "^6.0.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.1",
    "@types/node": "^17.0.23",
    "@types/secp256k1": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "^4.3.6",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.0.0",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.2",
    "prettier": "^2.6.1",
    "prettier-eslint": "^13.0.0",
    "prettier-standard": "^15.0.1",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "tslint": "^6.1.3",
    "typescript": "^4.6.2",
    "browserify": "^17.0.0",
    "uglify-js": "^3.15.4",
    "node-ts": "^5.1.2"
  }
}
